{
  "name": "skillshare-academy-testing-challenge",
  "version": "1.0.0",
  "description": "SkillShare Academy core functionality - Testing Challenge",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "mutation": "stryker run"
  },
  "keywords": ["testing", "jest", "skillshare", "education", "credits", "mutation-testing"],
  "author": "SkillShare Academy",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "@stryker-mutator/core": "^7.3.0",
    "@stryker-mutator/jest-runner": "^7.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 